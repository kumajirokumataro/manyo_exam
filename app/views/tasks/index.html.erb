<h1><%= t('view.index') %></h1>
<div class="searchbox">
  <%= form_with scope: :task, url: tasks_path, local: true, method: :get do |f| %>
  <%= f.text_field :name, placeholder: "検索したい内容を記入してください。" %>
  <%#= f.text_field :status, placeholder: "検索したいステータスを選んで下さい。" %>
  <%= f.select :status, [["未着手", "未着手"], ["着手中", "着手中"], ["完了", "完了"]], include_blank: "選択して下さい" %>
    
  <%= f.submit "検索", class: "btn" %>
  <% end %>
</div>


<div>
  <table>
    <tr>
      <th><%= t('view.task_name') %></th>
      <th><%= t('view.content') %></th>
      <th><%= t('view.timelimit') %></th>
      <th><%= t('view.status') %></th>
    </tr>

  <% @tasks.each do |task| %>
    <tr class="task_list">
      <td><%= task.name %></td>
      <td><%= task.content %></td>
      <td><%= task.timelimit %></td>
      <td><%= task.status %></td>

      <td><%= link_to t('view.detail'), task_path(task.id) %></td>
      <td><%= link_to t('view.edit'), edit_task_path(task.id) %></td>
      <td><%= link_to t('view.destroy'), task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
      
    </tr>
  <% end %>
  </table>
</div>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
